<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="240dp"
    android:layout_height="178dp"
    android:background="@drawable/bg_dialog_choose_register"
    >
<ImageView
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:background="@drawable/icon_tel_msg"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="12dp"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="89dp"
    android:text="我们将发送验证码到该手机"
    android:textSize="12sp"
    android:textColor="#b3b3b3"
    />
<TextView
    android:id="@+id/tv_tel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="10sp"
    android:layout_marginTop="109dp"
    android:layout_centerHorizontal="true"
    android:textColor="#636363"
    />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="20dp"
    android:layout_centerHorizontal="true"
    >
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="修改"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_cancel"
        />
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="确认"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:background="@drawable/bg_confirm"
        />

</LinearLayout>
</RelativeLayout>