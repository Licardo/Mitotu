<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="190dp"
    android:background="@drawable/bg_dialog_choose_register"
    >
<RelativeLayout
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    >
<ImageView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="6dp"
    android:layout_centerVertical="true"
    android:background="#dcdcdc"
    android:layout_toLeftOf="@+id/title"
    />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他方式注册"
        android:textSize="10sp"
        android:textColor="#b5b5b5"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:background="#dcdcdc"
        android:layout_toRightOf="@+id/title"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/layout_title"
        >
        <ImageView
            android:id="@+id/iv_weibo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_login_weibo"
            />
        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_login_qq"
            />
        <ImageView
            android:id="@+id/iv_register"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_login_tel"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_cancel_choose_dialog"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:text="取消"
        />
</RelativeLayout>