<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miaotu.activity.CustomTourDetailActivity"
    android:background="#f1f3f6">
<include
    android:id="@+id/layout_top"
    layout="@layout/top_bar"
    ></include>
    <ScrollView
        android:layout_below="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="45dp"
            android:orientation="vertical"
            android:background="#f1f3f6"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_input_login"
                android:visibility="visible"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/icon_join_detail"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人信息"
                        android:textSize="14sp"
                        android:textColor="#646464"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/et_tel"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_edittext"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="#646464"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:hint="联系电话"
                    android:maxLines="11"
                    android:inputType="number"
                    android:textColorHint="#b4b4b4"
                    android:gravity="center|left"
                    />
                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_edittext"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="#646464"
                    android:singleLine="true"
                    android:maxLength="18"
                    android:inputType="number"
                    android:hint="身份证号"
                    android:textColorHint="#b4b4b4"
                    android:gravity="center|left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件照片（正反面）"
                    android:textSize="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#646464"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        >
                        <ImageView
                            android:id="@+id/iv_id_1"
                            android:layout_width="match_parent"
                            android:src="@drawable/bg_id_1"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_del1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/icon_del"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        >
                        <ImageView
                            android:id="@+id/iv_id_2"
                            android:layout_width="match_parent"
                            android:src="@drawable/bg_id_2"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_del2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/icon_del"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="#a2dadb"
        android:text="下一步"
        android:textColor="#ffffff"
        />
</RelativeLayout>
