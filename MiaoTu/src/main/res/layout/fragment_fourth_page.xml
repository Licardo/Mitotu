    <RelativeLayout
        android:id="@+id/rl_userinfo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white">

        <com.miaotu.view.CircleImageView
            android:id="@+id/iv_userhead"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/location_msg" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_userhead"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海瑞那"
                android:textColor="#646464"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_usergender"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignLeft="@id/tv_username"
                android:layout_below="@id/tv_username"
                android:layout_marginTop="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/mine_girl" />

            <TextView
                android:id="@+id/tv_userage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_usergender"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_usergender"
                android:text="23岁"
                android:textColor="#b4b4b4"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_iden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_userage"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_userage"
                android:text="学生"
                android:textColor="#b4b4b4"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_userfans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iv_usergender"
                android:layout_below="@id/iv_usergender"
                android:layout_marginTop="6dp"
                android:text="10个关注|39个粉丝"
                android:textColor="#ff8000"
                android:textSize="10sp" />
        </RelativeLayout>

