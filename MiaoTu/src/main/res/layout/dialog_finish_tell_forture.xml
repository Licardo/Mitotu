<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:id="@+id/layout_tell_forture"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/tell_forture_bg"
            android:paddingLeft="28dp"
            android:paddingBottom="30dp"
            android:paddingRight="28dp"
            android:paddingTop="50dp"
            >
            <TextView
                android:id="@+id/tv_finish_tell_forture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="此卦象为上上签，得到妙途奖励红包￥10元"
                android:textColor="#646464"
                android:layout_centerInParent="true"
                android:textSize="14sp"/>

            <RelativeLayout
                android:id="@+id/layout_share"
                android:layout_below="@+id/tv_finish_tell_forture"
                android:layout_width="205dp"
                android:layout_height="45dp"
                android:background="@drawable/red_package_share_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享结果领卜卦红包"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_tell_forture_close"
            />
    </RelativeLayout>
</RelativeLayout>
