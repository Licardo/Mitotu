<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f3f6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white">

        <com.miaotu.view.CircleImageView
            android:id="@+id/iv_head_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_avatar"
            app:border_width="0dp" />

        <ImageView
            android:id="@+id/iv_gender"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignBottom="@id/iv_head_photo"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_head_photo"
            android:background="@drawable/mine_girl"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_head_photo"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/iv_gender"
            android:text="18岁"
            android:textColor="#b4b4b4"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_head_photo"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_age"
            android:text="学生"
            android:textColor="#b4b4b4"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_head_photo"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_identity"
            android:text="刚刚"
            android:textColor="#b4b4b4"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_like" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_head_photo"
            android:text="四小美"
            android:textColor="#646464"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tag_date"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignLeft="@id/iv_gender"
            android:layout_below="@id/iv_head_photo"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_tag_date"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="5月20日"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_tag_des"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignBottom="@id/tv_tag_date"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_tag_date"
            android:background="@drawable/bg_tag_des"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="白云湖"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_tag_require"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignBottom="@id/tv_tag_date"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_tag_des"
            android:background="@drawable/bg_tag_require"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="需要10人"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_tag_price"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignBottom="@id/tv_tag_date"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_tag_require"
            android:background="@drawable/bg_tag_price"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="20000元"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_tag_date"
            android:layout_below="@id/tv_tag_date"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="6dp"
            android:text="所提出的具体愿望或条件达到质量要求提出领土要求"
            android:textColor="#646464"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/layout_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignLeft="@id/tv_introduce"
            android:layout_below="@id/tv_introduce"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/layout_img"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="评论2人"
            android:textColor="#b4b4b4"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_join_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_comment_count"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_comment_count"
            android:text="已报名2人"
            android:textColor="#b4b4b4"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_join_count"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:text="0.05km"
            android:textColor="#b4b4b4"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_join_list"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/layout_img"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/joinlist"
            android:textColor="#4d99cb"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
