<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.hdodenhof.circleimageview.sample.MainActivity$PlaceholderFragment"
    android:background="#f0f0f0"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
    <com.miaotu.view.CircleImageView
        android:id="@+id/iv_head_photo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/headphototest2"
        app:border_width="0dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:textSize="12sp"
            android:textColor="#b4b4b4"
            android:text="小张"
            />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="18:15"
            android:textSize="10sp"
            android:textColor="#b4b4b4"
            />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:textColor="#646464"
        android:textSize="14sp"
        android:lineSpacingExtra="5dp"
        android:maxLength="60"
        android:ellipsize="end"
        android:text="法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发法定发送到阿斯达发送到山顶发"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dedede"
            />
  </LinearLayout>
</LinearLayout>