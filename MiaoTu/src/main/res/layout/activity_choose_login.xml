<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miaotu.activity.ChooseLoginActivity"
    android:background="@drawable/bg_choose_login"
    >
<Button
    android:id="@+id/btn_wechat_register"
    android:layout_width="220dp"
    android:layout_height="30dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="120dp"
    android:background="@drawable/wechat_register"
    android:layout_centerHorizontal="true"
    />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:id="@+id/btn_register_other"
            android:layout_width="109dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_register_other"
            />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="109dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_login_choose"
            android:layout_marginLeft="3dp"
            />
    </LinearLayout>
</RelativeLayout>
