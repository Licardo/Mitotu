<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
    android:background="#f1f3f6"
    >
    <LinearLayout
        android:id="@+id/layout_together"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="一起去"
            android:textSize="12sp"
            android:textColor="#b4b4b4"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dcdcdc"
            ></View>
        <LinearLayout
            android:id="@+id/layout_together_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            ></LinearLayout>
        <TextView
            android:id="@+id/tv_together_more"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="查看更多普通约游>>"
            android:textSize="10sp"
            android:textColor="#ffc6a3"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:id="@+id/view_gap"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        ></View>
    <LinearLayout
        android:id="@+id/layout_custom_tour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="妙旅团"
            android:textSize="12sp"
            android:textColor="#b4b4b4"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dcdcdc"
            ></View>
        <LinearLayout
            android:id="@+id/layout_custom_tour_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            ></LinearLayout>
        <TextView
            android:id="@+id/tv_custom_more"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="查看更多定制约游>>"
            android:textSize="10sp"
            android:textColor="#ffc6a3"
            android:gravity="center"
            />
    </LinearLayout>
    <include
        android:id="@+id/layout_empty"
        layout="@layout/layout_empty_search_tour"
        ></include>
</LinearLayout>